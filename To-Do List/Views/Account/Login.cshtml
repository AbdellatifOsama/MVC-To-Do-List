@model LoginViewModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Login";
}

<div class="col-12 col-md-8 col-lg-6 col-xl-5">
    <div class="card shadow-2-strong" style="border-radius: 1rem;">
        <div class="card-body p-5 text-center">

            <h3 class="mb-5">Sign in</h3>
            <form asp-controller="account" asp-action="login">
                <div class="form-outline mb-4">
                    <input asp-for="Email" id="typeEmailX-2" class="form-control form-control-lg" />
                    <label asp-for="Email" class="form-label" for="typeEmailX-2"></label>
                </div>
                <div class="form-outline mb-4">
                    <input asp-for="Password" type="password" id="typePasswordX-2" class="form-control form-control-lg" />
                    <label asp-for="Password" class="form-label" for="typePasswordX-2"></label>
                </div>
                <div class="form-check d-flex justify-content-start mb-4">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="form1Example3" />
                    <label asp-for="RememberMe" class="form-check-label" for="form1Example3"></label>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
            </form>
           

           

            <!-- Checkbox -->
           

            <p class="ps-1 text-start text-muted mt-3 mb-0">Forgot password?</p>
            <p class="text-center text-muted mt-4 mb-0">
                Don't have an account?
                <a asp-controller="account" asp-action="Register" class="fw-bold text-body"><u>Register here</u></a>
            </p>
        
        </div>
    </div>
</div>

