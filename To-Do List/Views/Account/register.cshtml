@model RegisterViewModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Register";
}
<div class="col-12 col-md-8 col-lg-6 col-xl-5">
    <div class="card" style="border-radius: 15px;">
        <div class="card-body p-5">
            <h2 class="text-uppercase text-center mb-5">Create an account</h2>
            <form asp-controller="account" asp-action="register">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-outline mb-4">
                    <input asp-for="UserName" id="form3Example1cg" class="form-control form-control-lg" />
                    <label asp-for="UserName" class="form-label" for="form3Example1cg"></label>
                </div>
                <div class="form-outline mb-4">
                    <input asp-for="Email" id="form3Example3cg" class="form-control form-control-lg" />
                    <label asp-for="Email" class="form-label" for="form3Example3cg"></label>
                </div>
                <div class="form-outline mb-4">
                    <input asp-for="Password" id="form3Example4cg" class="form-control form-control-lg" />
                    <label asp-for="Password" class="form-label" for="form3Example4cg"></label>
                </div>
                <div class="form-outline mb-4">
                    <input asp-for="ConfirmPassword" type="password" id="form3Example4cdg" class="form-control form-control-lg" />
                    <label asp-for="ConfirmPassword" class="form-label" for="form3Example4cdg"></label>
                </div>
                <div class="form-check d-flex justify-content-center mb-5">
                    <input asp-for="IsTermsAgreed" class="form-check-input me-2" type="checkbox" id="form2Example3cg" />
                    <label class="form-check-label" for="form2Example3g">
                        I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                    </label>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" id="submit-btn"
                            class="btn btn-primary btn-block btn-lg text-white" disabled>
                        Register
                    </button>
                </div>
                <p class="text-center text-muted mt-5 mb-0">
                    Have already an account?
                    <a asp-controller="account" asp-action="login" class="fw-bold text-body"><u>Login here</u></a>
                </p>
            </form>
        </div>
    </div>
</div>
@section isTermsAgreed{
    <script>
        var AgreeTerms = document.getElementById("form2Example3cg");
        var submitBtn = document.getElementById("submit-btn");
        AgreeTerms.addEventListener("click", function () {
            if (AgreeTerms.checked) {
                submitBtn.attributes.removeNamedItem("disabled");
            }
            else {
                submitBtn.setAttribute("disabled", true);
            }
        })
    </script>
}
